# Backend Environment Variables
# Copy this file to backend.env and update with your actual values

# Django Settings
DEBUG=0
SECRET_KEY=change-this-to-a-strong-random-key
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 your-domain.com

# Database
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=sea_saw_prod
SQL_USER=sea_saw_prod_user
SQL_PASSWORD=change-this-password
SQL_HOST=db
SQL_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS (not needed with unified gateway, but kept for compatibility)
FRONTEND_HOST=http://localhost

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
